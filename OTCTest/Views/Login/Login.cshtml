@using Microsoft.AspNetCore.Mvc.Rendering
@model LoginModel


<h2>Вход на сайт</h2>

@if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
{
    <div class="alert alert-danger"> 
        <a class="close" data-dismiss="alert">&times;</a> 
        @Html.ValidationSummary()
    </div>
}

<form asp-action="Login" asp-controller="Login" asp-anti-forgery="true">
        <div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login">Имя</label><br />
                <input type="text" asp-for="Login" />
                <span class="field-validation-error" asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn" />
            </div>
        </div>
    </form>


