@{
    ViewData["Title"] = "ShowUsersComplex";
    Layout = null;
}


<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>


<h2 style="text-align: center;">Пользователи</h2>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="myTableUsers" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Идентификатор</th>
                    <th>Логин</th>
                    <th>Пароль</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Телефон</th>
                    <th>Администратор</th>
                    <th>Операции</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div align="center">
    <button type="button" onclick="location.href = '@Url.Action("UserNew", "UserGrid")'">Новый пользователь</button>
</div>
<div align="center">
    <a asp-controller="Login" asp-action="Login">Выход</a>
</div>



<script>

    $(document).ready(function () {
        var table = $('#myTableUsers').DataTable({
            "ajax": {
                "url": "/Helper/GetAllUsers",
                "type": "GET",
                "datatype": "json"
            },
            "columnDefs":
                [
                    {
                        "targets": [0, 2],
                        "visible": false,
                        "searchable": false,
                        "width": "0%"
                    },
                    {
                        "targets": [1, 3, 4, 5, 6],
                        "visible": true,
                        "searchable": true,
                        "width": "14%"
                    },
                    {
                        "targets": [7],
                        "visible": true,
                        "searchable": false,
                        "render": function (data) {
                            return data ? '<input type="checkbox" disabled checked/>' : '<input type = "checkbox" disabled />';
                        }
                    },
                    {
                        "data": null,
                        "targets": [8],
                        "defaultContent":
                            '<button class="btn-edit" type="button">Редактировать</button>'
                            + '<button class="btn-delete"  type="button">Delete</button>'
                    }
                ],
            "columns": [
                { "data": "Id" },
                { "data": "Login" },
                { "data": "Password" },
                { "data": "LastName" },
                { "data": "FirstName" },
                { "data": "MiddleName" },
                { "data": "Telephone" },
                { "data": "IsAdmin" },
                { "data": null }
            ]
        });

        // Handle click on "Edit" button
        $('#myTableUsers tbody').on('click', '.btn-edit', function () {

            var data = table.row($(this).parents('tr')).data();

            window.location.href = '/UserGrid/UserEdit?userId=' + data.Id;

        });


        // Handle click on "Delete" button
        $('#myTableUsers tbody').on('click', '.btn-delete', function () {
            var data = table.row($(this).parents('tr')).data();

            table.row($(this).parents('tr')).remove().draw(false);

            $.ajax({
                type: "POST",
                url: '/Helper/Delete?userId=' + data.Id,

                datatype: "json"

            });

        });
    });

</script>
