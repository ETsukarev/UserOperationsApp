@page
@model EditUserModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Редактирование пользователя</h2>

<hr />

<form method="post">
    <div class="validation" asp-validation-summary="ModelOnly" style="color: crimson"></div>

    @Html.HiddenFor(model => model.Person.Id)
    @Html.HiddenFor(model => model.password)

    <div class="form-group">
        <label asp-for="Person.Login" class="control-label">Логин</label>
        <input asp-for="Person.Login" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.Password" class="control-label">Пароль</label>
        <input asp-for="Person.Password" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.FirstName" class="control-label">Имя</label>
        <input asp-for="Person.FirstName" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.MiddleName" class="control-label">Отчество</label>
        <input asp-for="Person.MiddleName" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.MiddleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.LastName" class="control-label">Фамилия</label>
        <input asp-for="Person.LastName" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.Telephone" class="control-label">Номер телефона</label>
        <input asp-for="Person.Telephone" class="form-control" style="width:300px" />
        <span asp-validation-for="Person.Telephone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="Person.IsAdmin" /> @Html.DisplayNameFor(model => model.Person.IsAdmin)
            </label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>

    <div align="left">
        <button type="button" onclick="location.href = '@Url.Page("/AllUsers")'">К списку пользователей</button>
    </div>

</form>


