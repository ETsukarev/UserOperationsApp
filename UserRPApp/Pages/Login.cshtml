@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Вход</h2>

<form method="post" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" style="color: crimson"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Имя</label><br />
            <input asp-for="Login" class="form-control" style="width:200px" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password" class="form-control" style="width:200px" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>



