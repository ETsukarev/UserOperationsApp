@page
@model NoAdminUsersModel
@{
    ViewData["Title"] = "NoAdminUsers";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">Пользователи</h2>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="tableUsers" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Идентификатор</th>
                    <th>Логин</th>
                    <th>Пароль</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Телефон</th>
                    <th>Администратор</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div align="center">
    <a href='@Url.Page("/Login")'>Выход</a>
</div>

@section Scripts {

    <link href="~/lib/datatables_net/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/site.js"></script>

    <script src="~/lib/datatables_net/js/jquery.dataTables.min.js"></script>

    <script>

        $(function () {
            $('#tableUsers').DataTable({
                "serverSide": true,
                "order": [[3, 'asc']],
                "ajax": {
                    "url": "/NoAdminUsers?handler=NoAdmin",
                    "type": "GET",
                    "datatype": "json",
                    "contentType": "application/json",
                    "data": prepareServerSideParams,
                    "dataFilter": filterResponseData
                },
                "columnDefs":
                    [{
                        "targets": [0, 1, 2, 7],
                        "visible": false,
                        "searchable": false,
                        "width": "0%"
                    },
                    {
                        "targets": [3, 4, 5, 6],
                        "visible": true,
                        "searchable": true,
                        "width": "25%"
                    }
                    ],
                "columns": [
                    { "data": "Id" },
                    { "data": "Login" },
                    { "data": "Password" },
                    { "data": "LastName" },
                    { "data": "FirstName" },
                    { "data": "MiddleName" },
                    { "data": "Telephone" },
                    { "data": "IsAdmin" }
                ]
            });
        });

    </script>

}

